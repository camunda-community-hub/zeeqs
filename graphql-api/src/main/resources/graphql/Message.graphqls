type Message {
    key: ID!

    name: String!
    correlationKey: String
    messageId: String
    timeToLive: String,

    state: MessageState
    timestamp(zoneId: String = "Z"): String

    messageCorrelations: [MessageCorrelation!]
}

enum MessageState {
    PUBLISHED
    DELETED
}

type MessageConnection {
    totalCount: Int!
    nodes: [Message!]!
}

extend type Query {
    message(key: ID!): Message

    messages(
        perPage: Int = 10,
        page: Int = 0): MessageConnection!
}
